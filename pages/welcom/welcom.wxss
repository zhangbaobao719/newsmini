page{
    background: #dfeed6;
}
.user-page{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.user-img{
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    margin-top: 120rpx;
}
.user-name{
    font-size: 32rpx;
    margin-top: 100rpx;
    font-weight: bold;
}
.user-button{
    border:1px solid #405f80;
    width: 200rpx;
    height: 80rpx;
    border-radius: 5px;
    margin-top: 200rpx;
    text-align: center;
}
.moto{
    font-size: 22rpx;
    font-weight: bold;
    line-height: 80rpx;
    color: #405f80;
}